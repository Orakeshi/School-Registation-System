<MainWindow>:
    name: "main"
    studentid: studentid

    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.043, 0.055, 0.333, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Image:
            source: "Images/logo.jpg"
            size: self.texture_size


        TextInput:
            id: studentid
            multiline: False
            opacity: 1
            size_hint: 0.8, 0.1
            pos_hint: {"x": 0.05, "top": 0.9 }
            font_size: 37

        Button:
            text: "Search"
            width: 100
            height: 50
            size_hint: .1, .1
            pos_hint: {"x": 0.8, "top": 0.9 }
            background_normal: ''
            background_color: 0, 0, 0.5, 1
            font_size: 30
            on_release:
                root.manager.transition.direction = "left"
                root.searchStudent()

        Button:
            text: "On Site"
            width: 100
            height: 50
            size_hint: .2, .2
            pos_hint: {"x": 0.05, "top": 0.7 }
            background_normal: ''
            background_color: 0, 0, 0.5, 1
            font_size: 30
            on_release:
                root.manager.transition.direction = "left"
                root.onsite()

        Button:
            text: "Off Site"
            width: 100
            height: 50
            size_hint: .2, .2
            pos_hint: {"x": 0.05, "top": 0.4 }
            background_normal: ''
            background_color: 0, 0, 0.5, 1
            font_size: 30
            on_release:
                root.manager.transition.direction = "left"
                root.offsite()

        Button:
            text: "ALL"
            width: 100
            height: 50
            size_hint: .4, .1
            pos_hint: {"x": 0.65, "top": 0.7 }
            background_normal: ''
            background_color: 0, 0, 0.5, 1
            font_size: 30
            on_release:
                root.manager.transition.direction = "left"
